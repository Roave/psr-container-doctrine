{
    "name": "roave/psr-container-doctrine",
    "type": "library",
    "description": "Doctrine Factories for PSR-11 Containers",
    "homepage": "https://github.com/Roave/psr-container-doctrine",
    "license" : "BSD-2-Clause",
    "authors": [
        {
            "name":     "Ben Scholzen",
            "homepage": "https://github.com/dasprid"
        },
        {
            "name": "James Titcumb",
            "email": "james@asgrim.com",
            "homepage": "https://github.com/asgrim"
        }
    ],
    "require": {
        "php": "~8.0.0 || ~8.1.0",
        "doctrine/annotations": "^1.13",
        "doctrine/cache": "^1.0",
        "doctrine/common": "^3.2",
        "doctrine/dbal": "^3.3",
        "doctrine/event-manager": "^1.1",
        "doctrine/migrations": "^3.4",
        "doctrine/orm": "^2.11",
        "doctrine/persistence": "^2.3",
        "psr/cache": "^1.0",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^10.0.0",
        "phpunit/phpunit": "^9.4",
        "psalm/plugin-phpunit": "^0.16.1",
        "symfony/yaml": "^6.0.14",
        "vimeo/psalm": "^4.20"
    },
    "autoload": {
        "psr-4": {
            "Roave\\PsrContainerDoctrine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RoaveTest\\PsrContainerDoctrine\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/package-versions-deprecated": true,
            "ocramius/package-versions": true
        },
        "platform": {
            "php": "8.0.99"
        },
        "sort-packages": true
    }
}
