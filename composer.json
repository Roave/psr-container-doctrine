{
    "name": "roave/psr-container-doctrine",
    "type": "library",
    "description": "Doctrine Factories for PSR-11 Containers",
    "homepage": "https://github.com/Roave/psr-container-doctrine",
    "license" : "BSD-2-Clause",
    "authors": [
        {
            "name":     "Ben Scholzen",
            "homepage": "https://github.com/dasprid"
        },
        {
            "name": "James Titcumb",
            "email": "james@asgrim.com",
            "homepage": "https://github.com/asgrim"
        }
    ],
    "require": {
        "php": "~8.1.0 || ~8.2.0",
        "doctrine/annotations": "^1.13.3",
        "doctrine/cache": "^1.13.0",
        "doctrine/common": "^3.4.3",
        "doctrine/dbal": "^3.5.1",
        "doctrine/event-manager": "^1.2.0",
        "doctrine/migrations": "^3.5.2",
        "doctrine/orm": "^2.13.4",
        "doctrine/persistence": "^2.5.5",
        "psr/cache": "^1.0.1 || ^2.0.0 || ^3.0.0",
        "psr/container": "^1.0 || ^2.0"
    },
    "require-dev": {
        "doctrine/coding-standard": "^8.2.1",
        "phpunit/phpunit": "^9.5.27",
        "psalm/plugin-phpunit": "^0.18.4",
        "symfony/yaml": "^6.2.0",
        "vimeo/psalm": "^5.1.0"
    },
    "autoload": {
        "psr-4": {
            "Roave\\PsrContainerDoctrine\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RoaveTest\\PsrContainerDoctrine\\": "test/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "composer/package-versions-deprecated": true,
            "ocramius/package-versions": true
        },
        "platform": {
            "php": "8.1.99"
        },
        "sort-packages": true
    }
}
